  "engines": {
    "npm": ">=8.1.2",
    "yarn": ">=1.12.17",
    "node": ">=16.13.2"
  },
  "scripts": {
    "start:admin": "cd admin && yarn dev",
    "start:backend": "cd api && yarn start:dev",
    "start:frontend": "cd app && yarn dev",
    "prepare": "husky install",
    "pre-commit-next": "cd app && yarn lint && cd ..",
    "pre-commit-nest": "cd api && yarn lint && cd ..",
    "setup": "cd app && yarn && cd ../api && yarn && cd ../admin && yarn"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "eslint": "^7.32.0",
